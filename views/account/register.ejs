<% if (title) { %>
    <h1><%- title %></h1>
<% } else {
    res.redirect('/')
} %>

<% if (errors) { %>
    <ul class="notice"></ul>
    <% errors.array().forEach(error =>{ %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>

<div id="form-wrapper">
<form class="myForm" action="/account/register" method="post">
<fieldset>
<legend>All Fields Are Required</legend>
<label for="account_firstname">First Name</label>
<input type="text" id="account_firstname" name="account_firstname" title="Please Enter Your First Name" placeholder="First Name" value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>" autofocus required>
<label for="account_lastname">Last Name</label>
<input type="text" id="account_lastname" name="account_lastname" placeholder="Last Name" title="Please Enter Your Last Name" value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>" required>
<label for="account_email">Email</label>
<input type="email" id="account_email" name="account_email" title="Please Enter a Valid Email" placeholder="Email" value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" required>
<label for="account_password">Password</label>
<input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" placeholder="Password" title="Please Enter Your Password" required>
<span><i>There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</i></span>
<input type="submit" Value="Register" id="loginBtn">
</fieldset>
</form>
</div>
