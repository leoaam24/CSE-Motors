<% if (title) { %>
    <h1><%- title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice"></ul>
    <% errors.array().forEach(error =>{ %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>


<div id="management-wrapper">
    <ul class="management-container">
        <li class="addClassification"><a href="/inv/addClassification">Add New Classification</a></li>
        <li class="addInventory"><a href="/inv/addInventory">Add New Inventory</a></li>
    </ul>
</div>

<h2>Manage Inventory</h2>
    <label for="classificationList">Select Classification</label>
    <select name="classificationList" id="classificationList">
    <% if(classificationSelect) {%>
        <% classificationSelect.rows.forEach(classification => { %>
            <option value="<%=classification.classification_id%>"><%=classification.classification_name%></option>
           <%})%>
        </select>
        <% } %>
    <table id="inventoryDisplay"></table>

    <noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>